@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1>Welcome to the Word Counter Form</h1>
    <p>You can enter master word and make a list of other words to compare them to the master word. The user can then adjust the list of word or <strong><em>even</em></strong> pick a new master word.</p>
  </div>
  <div class="row">
    <div class="col-md-6 borders">
      <h2>List of Words:</h2>
      <form class="" action="/words/add" method="post">
        <label for="new-word">Enter a word to add to list:</label>
        <input type="text" name="new-word" id="new-word" required>
        <button type="submit" class="btn btn-info">AddWord</button>
      </form>
      <br>
      <div>
        <div class="row">
          <div class="col-md-3">
            <h4 class='listHeader'>Word</h4>
          </div>
          <div class="col-md-5">
            <h4 class='listHeader'>Times in @WordCounter.Models.RepeatCounter.MasterString</h4>
          </div>
        </div>
        <div class="lists">
          @for (int i = @WordCounter.Models.RepeatCounter.InputWords.Count-1; i >= 0; i--)
          {
            <div class="row">
              <div class="col-md-3 listItems">
                <p>@WordCounter.Models.RepeatCounter.InputWords[i].Input</p>
              </div>
              <div class="col-md-5 listItems">
                <p>@WordCounter.Models.RepeatCounter.InputWords[i].RepeatCount()</p>
              </div>
            </div>
          }
        </div>
      </div>
    </div>

    <div class="col-md-6 borders right">
      <h2>Master Word:</h2>
      <form class="" action="/words" method="post">
        <label for="new-master">Enter a new master word:</label>
        <input type="text" name="new-master" id="new-master" required>
        <button type="submit" class="btn btn-primary">Replace</button>
      </form>
      <br>
      <h3>Current Master Word: <span class="important">@WordCounter.Models.RepeatCounter.MasterString</span></h3>
    </div>
  </div>
</div>
