@{
  Layout = "_Layout";
}

<div class="container">
  <h1 class="jumbotron">Word Counter Form Menu</h1>
  <div class="row">
    <div class="col-md-6">
      <h2>Master Word:</h2>
      <form class="" action="/words" method="post">
        <label for="new-master">Enter a new master word:</label>
        <input type="text" name="new-master" id="new-master">
        <button type="submit" class="btn btn-primary">Replace</button>
      </form>
      Current Master Word: @WordCounter.Models.RepeatCounter.MasterString
    </div>
    <div class="col-md-6">
      <h2>List of Words:</h2>
      <form class="" action="/words/add" method="post">
        <label for="new-word">Enter a word to add to list:</label>
        <input type="text" name="new-word" id="new-word">
        <button type="submit" class="btn btn-info">AddWord</button>
      </form>
    </div>
  </div>
</div>
